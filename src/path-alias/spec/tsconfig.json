{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "es2020",
    "moduleResolution": "node",
    "paths": {
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@config/*": ["src/config/*"],
      "@types/*": ["src/types/*"],
      "@models/*": ["src/models/*"],
      "@controllers/*": ["src/controllers/*"],
      "@modules/*": ["src/modules/*"],
      "@/*": ["src/*"]
    }
  }
}
